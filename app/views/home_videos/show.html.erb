<!-- app/views/videos/show.html.erb -->
<h1>Video Details</h1>

<p><strong>Title:</strong> <%= @home_video.title %></p>

<% if @home_video.video.attached? %>
    <% if @home_video.video.video? %>
        <video controls class="w-[343px] h-[209px]">
            <source src="<%= rails_blob_path(@home_video.video) %>" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    <% end %>
<% else %>
  <p>No video uploaded.</p>
<% end %>
